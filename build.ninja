builddir = build
cflags = -std=c++11 -I./
lflags = -pthread

rule cxx
  command = clang++ -MMD -MF $out.d $cflags -c $in -o $out
  depfile = $out.d

rule link
  command = clang++ $in -o $out $lflags

rule exec
  command = build/run --gtest_color=yes

build $builddir/gtest.o: cxx gtest/gtest-all.cc
build $builddir/main.o: cxx main.cc
build $builddir/run: link $builddir/gtest.o $
                          $builddir/main.o

build all: exec $builddir/run

default all
